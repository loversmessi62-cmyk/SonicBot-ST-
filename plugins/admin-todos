import config from "../config.js";

export default {
    commands: ["todos", "tagall", "invocar"],

    run: async (sock, msg, args, { isGroup, isAdmin, isBotAdmin, metadata }) => {

        const jid = msg.key.remoteJid;

        if (!isGroup)
            return sock.sendMessage(jid, { text: config.messages.group });

        if (!isAdmin)
            return sock.sendMessage(jid, { text: config.messages.admin });

        if (!isBotAdmin)
            return sock.sendMessage(jid, { text: config.messages.botAdmin });

        let texto = args.join(" ") || "ğŸ“¢ *AtenciÃ³n a todos!*";

        let participantes = metadata.participants;
        let menciones = participantes.map(u => u.id);

        let mensaje = `${texto}\n\n`;
        for (let user of participantes) {
            mensaje += `â¤ @${user.id.split("@")[0]}\n`;
        }

        await sock.sendMessage(jid, { text: mensaje, mentions: menciones });
    }
};
